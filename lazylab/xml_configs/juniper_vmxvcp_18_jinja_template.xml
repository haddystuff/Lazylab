<domain type='kvm'>
  <name>{{vm_name}}</name>
  <description>{{description}}</description>
  <memory unit='KiB'>2097152</memory>
  <currentMemory unit='KiB'>2097152</currentMemory>
  <vcpu placement='static'>2</vcpu>
  <os>
    <type arch='x86_64' machine='pc-0.13'>hvm</type>
  </os>
  <features>
    <acpi/>
    <apic/>
    <vmport state='off'/>
  </features>
  <cpu mode='host-model'>
    <model fallback='allow'/>
  </cpu>
  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <pm>
    <suspend-to-mem enabled='no'/>
    <suspend-to-disk enabled='no'/>
  </pm>
  <devices>
    <emulator>/usr/bin/qemu-kvm</emulator>
    {% for volume_location in volume_location_list %}
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='{{volume_location}}'/>
      <target dev='sd{{"abcdefghijklmnopqrstuvwxyz"[loop.index - 1]}}' bus='virtio'/>
      <boot order='{{loop.index}}'/>
    </disk>
    {% endfor %}
    <controller type="pci" index="0" model="pci-root"/>
    <controller type="virtio-serial" index="0">
    </controller>
    <controller type="sata" index="0">
    </controller>
    <controller type="usb" index="0" model="piix3-uhci">
    </controller>
    {% for net in nets %}
    <interface type='network'>
      <source network='{{net}}'/>
      <model type='e1000'/>
      {% if net == managment_net_name %}
      <link state='down'/>
      {% endif %}
      <address type='pci' domain='0x0000' bus='0x00' function='0x0'/>
    </interface>
    {% endfor %}
    <serial type='tcp'>
      <source mode='bind' host='127.0.0.1' service='{{port_number}}'/>
      <protocol type='telnet'/>
      <target type='isa-serial' port='1'>
        <model name='isa-serial'/>
      </target>
    </serial>
    <console type='tcp'>
      <source mode='bind' host='127.0.0.1' service='{{port_number}}'/>
      <protocol type='telnet'/>
      <target type='serial' port='1'/>
    </console>
    <input type='mouse' bus='ps2'/>
    <input type='keyboard' bus='ps2'/>
    <graphics type='spice' autoport='yes'>
      <listen type='address'/>
      <image compression='off'/>
    </graphics>
    <video>
      <model type='qxl' ram='65536' vram='65536' vgamem='16384' heads='1' primary='yes'/>
    </video>
    <memballoon model='virtio'>
    </memballoon>
  </devices>
</domain>
